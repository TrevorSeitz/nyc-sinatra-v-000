<h1>Edit A Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">

<input id="hidden" type="hidden" name="_method" value="PATCH">

  <label>Figure Name:<%= @figure.name %></label>
  <p>change?</p>
  <input type="text" id="figure_name" name="figure[name]">
  <br><br>

  <label>Titles:</label>

  <% Title.all.each do |title| %>

    <!-- <label><%= title.name %></label> -->
    <br><input type="checkbox" id="title_<%=title.id %>" name="figure[title_ids][]" value="<%= title.id %>">
    <label><%= title.name %></label>
  <% end %>

  <p>or add a new Tile:
  <br><input type="text" name="title[name]" id="new_title"></p>
  <br></br>

  <label>Landmarks:</label>

  <% Landmark.all.each do |landmark| %>
    <!-- <label><%= landmark.name %></label> -->
    <br><input type="checkbox" id="landmark_<%=landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>">
    <label><%= landmark.name %></label>
  <% end %>

  <p>or add a new Landmark:
  <br><input type="text" name="landmark[name]" id="new_landmark"></p>
  <br><br>


  <input type="submit" value="Edit Figure">

</form>
